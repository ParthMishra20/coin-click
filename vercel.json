{
  "version": 2,
  "builds": [
    {
      "src": "src/app.js",
      "use": "@vercel/node"   
    },
    {
      "src": "public/index.html", 
      "use": "@vercel/static"     
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "/backend/server.js"  
    },
    {
      "src": "/(.*)", 
      "dest": "/public/index.html"  
    }
  ]
}
